<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comphy.photo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ComphyApp"
        android:allowBackup="true"
        android:icon="@drawable/img_logo_orange"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_logo_orange"
        android:supportsRtl="true"
        android:theme="@style/Theme.Comphy"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.White.Comphy" />
        <activity
            android:name=".ui.auth.forgot.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Orange.Comphy"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.auth.reset.ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Orange.Comphy"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.auth.verify.VerifyActivity"
            android:exported="false"
            android:theme="@style/Theme.Orange.Comphy"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.auth.register.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Orange.Comphy"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.auth.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Orange.Comphy"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.onboard.OnboardActivity"
            android:exported="false"
            android:theme="@style/Theme.White.Comphy" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Orange.Comphy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:minHeight">@dimen/dp_0</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="colorPrimary">@color/neutral_black</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="ActivableMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/state_button_activable</item>
    </style>

    <style name="CustomSuffixAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomButtonPost">
        <item name="background">@drawable/state_button_post</item>
        <item name="android:background">@drawable/state_button_post</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/neutral_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="EditTextCustomStyle">
        <item name="android:background">@drawable/state_field</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/neutral_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/neutral_black_20</item>
        <item name="carbon_cornerRadius">14dp</item>
        <item name="carbon_elevation">30dp</item>
        <item name="carbon_elevationShadowColor">#FFF4E5</item>
    </style>

    <style name="PostButtonStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/state_button_content_post</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/state_button_post</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/state_button_content_post</item>
        <item name="strokeColor">@color/primary_orange</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
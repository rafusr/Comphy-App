<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.ConstraintLayout
            android:id="@+id/layoutCustomBar"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="19dp"
            app:carbon_cornerRadiusBottomEnd="14dp"
            app:carbon_cornerRadiusBottomStart="14dp"
            app:carbon_elevation="30dp"
            app:carbon_elevationShadowColor="#FFEACB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/dp_0"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:letterSpacing="0"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:padding="@dimen/dp_0"
                android:stateListAnimator="@null"
                android:text="@string/string_back"
                android:textAllCaps="false"
                android:textColor="@color/primary_orange"
                android:textSize="16sp"
                app:icon="@drawable/ic_back"
                app:iconPadding="10dp"
                app:iconTint="@color/primary_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btnUploadPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:text="@string/string_article"
                android:textColor="@color/neutral_black_50"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

        </carbon.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCustomBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <carbon.widget.ConstraintLayout
                    android:id="@+id/layoutArticles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp"
                    app:carbon_cornerRadius="18dp"
                    app:carbon_elevation="30dp"
                    app:carbon_elevationShadowColor="#FFEACB"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txtCommunityTitleArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_0"
                        android:layout_marginTop="@dimen/dp_0"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/string_title_article"
                        android:textColor="@color/neutral_black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </carbon.widget.ConstraintLayout>

                <carbon.widget.ImageView
                    android:id="@+id/imgPhotoArticle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_community"
                    app:layout_constraintTop_toBottomOf="@id/layoutArticles"
                    tools:layout_editor_absoluteX="-12dp" />

                        <TextView
                            android:id="@+id/txtDescPara1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="76dp"
                            android:layout_marginHorizontal="16dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/string_desc_article1"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/imgPhotoArticle"/>

                        <TextView
                            android:id="@+id/txtTitlePara2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/string_article_para1"
                            android:textColor="@color/neutral_black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtDescPara1"/>

                        <TextView
                            android:id="@+id/txtDescPara2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/string_articles_para1"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtTitlePara2"/>

                        <TextView
                            android:id="@+id/txtTitlePara3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/string_article_para2"
                            android:textColor="@color/neutral_black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtDescPara2"/>

                        <TextView
                            android:id="@+id/txtDescPara3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/string_articles_para2"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtTitlePara3"/>
                        <TextView
                            android:id="@+id/txtTitlePara4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/string_article_para3"
                            android:textColor="@color/neutral_black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtDescPara3"/>

                        <TextView
                            android:id="@+id/txtDescPara4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/string_articles_para4"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtTitlePara4"/>

                        <TextView
                            android:id="@+id/txtTitlePara5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/string_article_para5"
                            android:textColor="@color/neutral_black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtDescPara4"/>

                        <TextView
                            android:id="@+id/txtDescPara5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="14dp"
                            android:layout_marginHorizontal="16dp"
                            android:justificationMode="inter_word"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/string_articles_para5"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                            app:layout_constraintEnd_toEndOf="@id/imgPhotoArticle"
                            app:layout_constraintTop_toBottomOf="@id/txtTitlePara5"/>

                <TextView
                    android:id="@+id/txtSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="@dimen/dp_0"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/string_source"
                    android:textColor="@color/neutral_black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/imgPhotoArticle"
                    app:layout_constraintTop_toBottomOf="@id/txtDescPara5"/>

                <TextView
                    android:id="@+id/txtSource2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="@dimen/dp_0"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/string_source2"
                    android:textColor="@color/neutral_black_40"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/txtSource"
                    app:layout_constraintTop_toTopOf="@id/txtSource"/>

                <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_0"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_semi_bold"
                android:includeFontPadding="false"
                android:letterSpacing="0"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:padding="@dimen/dp_0"
                android:stateListAnimator="@null"
                android:text="@string/string_next_materi"
                android:textAllCaps="false"
                android:textColor="@color/primary_orange"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/txtSource"
                app:layout_constraintStart_toStartOf="@id/imgPhotoArticle" />

                <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextArticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawablePadding="75dp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:MarginTop="41dp"
                android:text="Macam-Macam Sensor"
                android:textAllCaps="false"
                android:textColor="@color/neutral_black_40"
                android:textSize="14sp"
                android:drawableEnd="@drawable/ic_more_grey"
                app:iconPadding="98dp"
                app:iconTint="@color/neutral_black_40"
                app:layout_constraintTop_toBottomOf="@id/btnNextMateri"
                app:layout_constraintStart_toStartOf="@id/btnNextMateri"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

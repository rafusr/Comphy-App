<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    app:behavior_hideable="false"
    app:behavior_peekHeight="500dp">


        <carbon.widget.ConstraintLayout
            android:id="@+id/layoutNextMaterial"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:paddingHorizontal="24dp"
            app:carbon_cornerRadius="24dp"
            app:carbon_elevation="18dp"
            android:paddingVertical="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ima
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextMaterial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_0"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_more_grey"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:text="Sejarah Kamera"
                android:textAllCaps="false"
                android:textColor="@color/neutral_black_40"
                android:textSize="14sp"
                app:iconPadding="70dp"
                app:iconTint="@color/neutral_black_40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </carbon.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
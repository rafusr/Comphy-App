<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/imgSad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_emoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEmptyPhoto"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Foto Komunitas Kamu Masih Kosong! Upload Sekarang"
        android:lineHeight="32dp"
        android:textAlignment="center"
        android:textColor="@color/state_button_content_post"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSad" />
</androidx.constraintlayout.widget.ConstraintLayout>
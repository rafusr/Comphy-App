<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <carbon.widget.ConstraintLayout
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:background="@color/white"
        android:padding="12dp"
        app:carbon_cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary_orange"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:insetBottom="@dimen/dp_0"
            android:letterSpacing="0"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="19dp"
            android:stateListAnimator="@null"
            android:text="@string/feed_filter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_filter"
            app:iconPadding="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBackToTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToTop"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary_orange"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:insetBottom="@dimen/dp_0"
            android:letterSpacing="0"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:paddingStart="19dp"
            android:paddingEnd="12dp"
            android:stateListAnimator="@null"
            android:text="@string/feed_to_top"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_up"
            app:iconPadding="14dp"
            app:layout_constraintBottom_toBottomOf="@id/btnFilter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnFilter"
            app:layout_constraintTop_toTopOf="@id/btnFilter" />

    </carbon.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
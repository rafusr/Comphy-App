<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="288dp"
    android:layout_height="231dp">

    <TextView
        android:id="@+id/Sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/profile_are_you_sure"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnchecked"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="42dp"
        android:backgroundTint="@color/neutral_gray"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:paddingHorizontal="24dp"
        android:stateListAnimator="@null"
        android:text="@string/profile_checked"
        android:textAllCaps="false"
        android:textColor="@color/primary_gray"
        android:textSize="12sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sure"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/primary_orange"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:paddingVertical="2dp"
        android:paddingHorizontal="24dp"
        android:stateListAnimator="@null"
        android:text="@string/profile_save2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnchecked"
        app:layout_constraintTop_toTopOf="@id/btnchecked" />

</androidx.constraintlayout.widget.ConstraintLayout>
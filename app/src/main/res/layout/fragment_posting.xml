<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPosting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <carbon.widget.ConstraintLayout
        android:id="@+id/layoutPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingVertical="16dp"
        app:carbon_cornerRadius="18dp"
        app:carbon_elevation="24dp"
        app:carbon_elevationShadowColor="#FCF2E3"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="339dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutWritePost"
            style="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            android:layout_width="378dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            app:boxBackgroundColor="#F5F5F5"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusTopStart="14dp"
            app:boxStrokeWidth="0dp"
            app:counterTextColor="@color/neutral_black"
            app:endIconMode="none"
            app:errorEnabled="false"
            app:expandedHintEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:suffixText="@string/string_send"
            app:suffixTextAppearance="@style/CustomSuffixAppearance"
            app:suffixTextColor="#C0C0C0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtWritePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/feed_write_here"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:paddingVertical="16dp"
                android:paddingStart="27dp"
                android:paddingEnd="20dp"
                android:textColor="@color/neutral_black"
                android:textColorHint="#CFCFCF"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadVideo"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:insetTop="@dimen/dp_0"
            android:insetBottom="@dimen/dp_0"
            android:letterSpacing="0"
            android:paddingHorizontal="25dp"
            android:paddingVertical="12dp"
            android:stateListAnimator="@null"
            android:text="@string/string_upload_video"
            android:textAllCaps="false"
            android:textColor="@color/state_button_content_post"
            android:textSize="12sp"
            app:backgroundTint="@color/state_button_post"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_video"
            app:iconPadding="8dp"
            app:iconTint="@color/state_button_content_post"
            app:layout_constraintEnd_toStartOf="@id/btnUploadImage"
            app:layout_constraintStart_toStartOf="@id/inputLayoutWritePost"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutWritePost"
            app:strokeColor="@color/primary_orange"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadImage"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:insetTop="@dimen/dp_0"
            android:insetBottom="@dimen/dp_0"
            android:letterSpacing="0"
            android:paddingHorizontal="25dp"
            android:paddingVertical="12dp"
            android:stateListAnimator="@null"
            android:text="@string/string_upload_image"
            android:textAllCaps="false"
            android:textColor="@color/state_button_content_post"
            android:textSize="12sp"
            app:backgroundTint="@color/state_button_post"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_photograph"
            app:iconPadding="8dp"
            app:iconTint="@color/state_button_content_post"
            app:layout_constraintBottom_toBottomOf="@id/btnUploadVideo"
            app:layout_constraintEnd_toEndOf="@id/inputLayoutWritePost"
            app:layout_constraintStart_toEndOf="@id/btnUploadVideo"
            app:layout_constraintTop_toTopOf="@id/btnUploadVideo"
            app:strokeColor="@color/primary_orange"
            app:strokeWidth="1dp" />

    </carbon.widget.ConstraintLayout>


    <TextView
        android:id="@+id/txtCreateCommunity"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="32dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/string_member_create_community"
        android:textAlignment="center"
        android:textColor="@color/neutral_black_40"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPosting" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSettingCommunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtCreateCommunity">

        <carbon.widget.ConstraintLayout
            android:id="@+id/layoutSettingsCommunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="16dp"
            app:carbon_cornerRadius="18dp"
            app:carbon_elevation="24dp"
            app:carbon_elevationShadowColor="#FCF2E3"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bg_photo"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#C4C4C4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutSettingCommunity" />

            <TextView
                android:id="@+id/txtManageCommunity"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/string_maange_community"
                android:textColor="@color/neutral_black"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/imgProfile3"
                app:layout_constraintTop_toTopOf="@id/layoutSettingsCommunity" />

            <TextView
                android:id="@+id/txtSetCommunity"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/string_set_community"
                android:textColor="@color/primary_orange"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/imgProfile3"
                app:layout_constraintTop_toBottomOf="@id/txtManageCommunity" />

        </carbon.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSimiliarCommunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSettingCommunity">

        <carbon.widget.ConstraintLayout
            android:id="@+id/layoutSimiliarsCommunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="16dp"
            app:carbon_cornerRadius="18dp"
            app:carbon_elevation="24dp"
            app:carbon_elevationShadowColor="#FCF2E3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtSimiliarCommunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/string_similiar_community"
                android:textColor="@color/neutral_black_40"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutSimiliarCommunity" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="19dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/string_clear_green"
                android:src="@drawable/ic_clear_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutSimiliarCommunity" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/bg_photo"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#C4C4C4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSimiliarCommunity" />

            <TextView
                android:id="@+id/txtNameOfCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="-1dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/string_name_community"
                android:textColor="@color/neutral_black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/imgProfile4"
                app:layout_constraintTop_toTopOf="@id/imgProfile4" />

            <TextView
                android:id="@+id/txtDescCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/popins_italic_medium"
                android:text="@string/string_description_community"
                android:textColor="@color/neutral_black_40"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/imgProfile4"
                app:layout_constraintTop_toBottomOf="@id/txtNameOfCommunity" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/bg_photo"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#C4C4C4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgProfile4" />

            <TextView
                android:id="@+id/txtNameOfCommunity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="-1dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/string_title2_community"
                android:textColor="@color/neutral_black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/imgProfile5"
                app:layout_constraintTop_toTopOf="@id/imgProfile5" />

            <TextView
                android:id="@+id/txtDescCommunity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/popins_italic_medium"
                android:text="@string/string_description_community"
                android:textColor="@color/neutral_black_40"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/imgProfile5"
                app:layout_constraintTop_toBottomOf="@id/txtNameOfCommunity2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_more"
                android:drawablePadding="@dimen/dp_0"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:letterSpacing="0"
                android:minWidth="@dimen/dp_0"
                android:minHeight="@dimen/dp_0"
                android:padding="@dimen/dp_0"
                android:stateListAnimator="@null"
                android:text="@string/string_same_comment"
                android:textAllCaps="false"
                android:textColor="@color/primary_orange"
                android:textSize="12sp"
                app:iconPadding="10dp"
                app:iconTint="@color/primary_orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDescCommunity2"/>
        </carbon.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



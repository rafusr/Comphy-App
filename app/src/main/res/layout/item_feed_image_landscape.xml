<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_marginBottom="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    app:carbon_cornerRadius="18dp"
    app:carbon_elevation="30dp"
    app:carbon_elevationShadowColor="#FFEACB">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFeedProfile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@color/red_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_user_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/btnAddUser"
        app:layout_constraintStart_toEndOf="@id/imgFeedProfile" />

    <TextView
        android:id="@+id/txtUserJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_user_name"
        android:textColor="@color/neutral_black_20"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/txtUserName"
        app:layout_constraintTop_toBottomOf="@id/txtUserName" />

    <ImageButton
        android:id="@+id/btnAddUser"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/feed_add_user"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_user"
        app:layout_constraintBottom_toBottomOf="@id/txtUserName"
        app:layout_constraintEnd_toStartOf="@id/btnBookmark"
        app:layout_constraintTop_toTopOf="@id/txtUserName" />

    <ImageButton
        android:id="@+id/btnBookmark"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/feed_bookmark"
        android:scaleType="centerInside"
        android:src="@drawable/ic_bookmarked"
        app:layout_constraintBottom_toBottomOf="@id/txtUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtUserName" />

    <TextView
        android:id="@+id/txtFeedTimePassed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_time_passed"
        android:textColor="@color/neutral_black_20"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/txtUserJob"
        app:layout_constraintEnd_toEndOf="@id/btnBookmark"
        app:layout_constraintTop_toTopOf="@id/txtUserJob" />

    <TextView
        android:id="@+id/txtFeedCaption"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_caption"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/txtFeedTimePassed"
        app:layout_constraintStart_toStartOf="@id/imgFeedProfile"
        app:layout_constraintTop_toBottomOf="@id/txtUserJob" />

    <TextView
        android:id="@+id/txtFeedLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/string_current_location"
        android:textColor="#D1D1D1"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_location"
        app:drawableTint="#D1D1D1"
        app:layout_constraintStart_toStartOf="@id/txtFeedCaption"
        app:layout_constraintTop_toBottomOf="@id/txtFeedCaption" />

    <carbon.widget.ImageView
        android:id="@+id/imgFeedContent"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        android:src="@color/red_500"
        app:carbon_cornerRadius="14dp"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtFeedLocation"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtFeedCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_post_community"
        android:textColor="#C4C4C4"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_people_community"
        app:drawableTint="#C4C4C4"
        app:layout_constraintStart_toStartOf="@id/txtFeedCaption"
        app:layout_constraintTop_toBottomOf="@id/imgFeedContent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutLikesUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/txtFeedCaption"
        app:layout_constraintTop_toBottomOf="@id/txtFeedCommunity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLikesUser1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@color/red_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLikesUser2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="17dp"
            android:scaleType="centerCrop"
            android:src="@color/red_200"
            app:layout_constraintBottom_toBottomOf="@id/imgLikesUser1"
            app:layout_constraintStart_toStartOf="@id/imgLikesUser1"
            app:layout_constraintTop_toTopOf="@id/imgLikesUser1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLikesUser3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="17dp"
            android:scaleType="centerCrop"
            android:src="@color/red_300"
            app:layout_constraintBottom_toBottomOf="@id/imgLikesUser2"
            app:layout_constraintStart_toStartOf="@id/imgLikesUser2"
            app:layout_constraintTop_toTopOf="@id/imgLikesUser2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtLikesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_likes_count"
        android:textColor="@color/neutral_black_50"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/layoutLikesUser"
        app:layout_constraintStart_toEndOf="@id/layoutLikesUser"
        app:layout_constraintTop_toTopOf="@id/layoutLikesUser" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComment"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:insetTop="@dimen/dp_0"
        android:insetBottom="@dimen/dp_0"
        android:letterSpacing="0"
        android:paddingHorizontal="26dp"
        android:paddingVertical="12dp"
        android:stateListAnimator="@null"
        android:text="@string/feed_comment"
        android:textAllCaps="false"
        android:textColor="@color/state_button_content_post"
        android:textSize="12sp"
        app:backgroundTint="@color/state_button_post"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_comment"
        app:iconPadding="14dp"
        app:iconTint="@color/state_button_content_post"
        app:layout_constraintEnd_toStartOf="@id/btnLike"
        app:layout_constraintStart_toStartOf="@id/txtFeedCaption"
        app:layout_constraintTop_toBottomOf="@id/layoutLikesUser"
        app:strokeColor="@color/primary_orange"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLike"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:insetTop="@dimen/dp_0"
        android:insetBottom="@dimen/dp_0"
        android:letterSpacing="0"
        android:paddingHorizontal="26dp"
        android:paddingVertical="12dp"
        android:stateListAnimator="@null"
        android:text="@string/feed_like"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="@color/state_button_like"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_thumb_up"
        app:iconPadding="14dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/btnComment"
        app:layout_constraintEnd_toEndOf="@id/txtFeedCaption"
        app:layout_constraintStart_toEndOf="@id/btnComment"
        app:layout_constraintTop_toTopOf="@id/btnComment"
        app:strokeColor="@color/primary_orange"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txtDataExif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:maxLength="22"
        android:maxLines="1"
        android:text="@string/feed_data_exif"
        android:textColor="@color/neutral_black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/btnComment"
        app:layout_constraintTop_toBottomOf="@id/btnComment" />

    <TextView
        android:id="@+id/txtDataExifCamera"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="@string/feed_data_exif_camera"
        android:textColor="@color/neutral_black"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/txtDataExifIso"
        app:layout_constraintStart_toStartOf="@id/btnComment"
        app:layout_constraintTop_toBottomOf="@id/txtDataExif" />

    <TextView
        android:id="@+id/txtDataExifLens"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="@string/feed_data_exif_lens"
        android:textColor="@color/neutral_black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/txtDataExifCamera"
        app:layout_constraintStart_toStartOf="@id/txtDataExifCamera"
        app:layout_constraintTop_toBottomOf="@id/txtDataExifCamera" />

    <TextView
        android:id="@+id/txtDataExifFlash"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="@string/feed_data_exif_flash"
        android:textColor="@color/neutral_black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/txtDataExifLens"
        app:layout_constraintStart_toStartOf="@id/txtDataExifLens"
        app:layout_constraintTop_toBottomOf="@id/txtDataExifLens" />

    <TextView
        android:id="@+id/txtDataExifIso"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="@string/feed_data_exif_iso"
        android:textColor="@color/neutral_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/txtDataExifCamera"
        app:layout_constraintEnd_toEndOf="@id/btnLike"
        app:layout_constraintStart_toEndOf="@id/txtDataExifCamera"
        app:layout_constraintTop_toTopOf="@id/txtDataExifCamera" />

    <TextView
        android:id="@+id/txtDataExifShutter"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="@string/feed_data_exif_shutter"
        android:textColor="@color/neutral_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/txtDataExifLens"
        app:layout_constraintEnd_toEndOf="@id/txtDataExifIso"
        app:layout_constraintStart_toStartOf="@id/txtDataExifIso"
        app:layout_constraintTop_toTopOf="@id/txtDataExifLens" />

    <TextView
        android:id="@+id/txtDataExifAperture"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:text="@string/feed_data_exif_aperture"
        android:textColor="@color/neutral_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/txtDataExifFlash"
        app:layout_constraintEnd_toEndOf="@id/txtDataExifShutter"
        app:layout_constraintStart_toStartOf="@id/txtDataExifShutter"
        app:layout_constraintTop_toTopOf="@id/txtDataExifFlash" />

    <TextView
        android:id="@+id/txtCommentCount"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/feed_comment_count"
        android:textColor="@color/neutral_black_20"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btnCommentSeeAll"
        app:layout_constraintStart_toStartOf="@id/txtDataExifFlash"
        app:layout_constraintTop_toBottomOf="@id/txtDataExifFlash" />

    <TextView
        android:id="@+id/btnCommentSeeAll"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/feed_comment_see_all"
        android:textAlignment="textEnd"
        android:textColor="@color/primary_orange"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/txtCommentCount"
        app:layout_constraintEnd_toEndOf="@id/txtDataExifAperture"
        app:layout_constraintStart_toEndOf="@id/txtCommentCount"
        app:layout_constraintTop_toTopOf="@id/txtCommentCount" />

    <carbon.widget.ConstraintLayout
        android:id="@+id/layoutComment"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:paddingHorizontal="20dp"
        android:paddingVertical="@dimen/dp_10"
        app:carbon_cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="@id/btnCommentSeeAll"
        app:layout_constraintStart_toStartOf="@id/txtCommentCount"
        app:layout_constraintTop_toBottomOf="@id/txtCommentCount">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:src="@color/amber_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtComment"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/comment_write"
            android:inputType="textMultiLine"
            android:textColor="@color/neutral_black"
            android:textColorHint="#BABABA"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSendComment"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/btnSendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/string_send"
            android:textColor="@color/state_button_comment"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgProfile" />

    </carbon.widget.ConstraintLayout>

</carbon.widget.ConstraintLayout>